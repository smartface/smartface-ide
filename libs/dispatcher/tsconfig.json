{
  "compilerOptions": {
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "noEmitOnError": false,
    "noImplicitThis": false,
    "noUnusedLocals": true,
    "strictNullChecks": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "allowJs": false,
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "lib",
    "lib": ["es6", "dom"],
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
